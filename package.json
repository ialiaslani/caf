{
  "name": "caf",
  "version": "1.0.0",
  "description": "clean architecture frontend",
  "repository": "https://git.nadindev.ir/aliaslani.mm/caf.git",
  "author": "ali aslani <aliaslani.mm@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "core:build": "yarn workspace @caf/core build",
    "core:test": "yarn workspace @caf/core test",
    "core:serve": "yarn workspace @caf/core start",
    "example-domain:build": "yarn workspace @caf/example-domain build",
    "example-domain:serve": "yarn workspace @caf/example-domain start",
    "infrastructure:build": "yarn workspace @caf/infrastructure build",
    "infrastructure:serve": "yarn workspace @caf/infrastructure start",
    "infrastructure:axios:build": "yarn workspace @caf/infrastructure-axios build",
    "infrastructure:axios:serve": "yarn workspace @caf/infrastructure-axios start",
    "infrastructure:react:serve": "yarn workspace @caf/infrastructure-react start",
    "infrastructure:vue:serve": "yarn workspace @caf/infrastructure-vue start",
    "infrastructure:angular:serve": "yarn workspace @caf/infrastructure-angular start",
    "vue:build": "yarn workspace @caf/presentation-vue build",
    "vue:serve": "yarn workspace @caf/presentation-vue dev",
    "react:build": "yarn workspace @caf/presentation-react build",
    "react:serve": "yarn workspace @caf/presentation-react dev",
    "angular:build": "yarn workspace @caf/presentation-angular build",
    "angular:serve": "yarn workspace @caf/presentation-angular start",
    "vue:dev": "concurrently --kill-others \"yarn workspace @caf/core start\" \"yarn workspace @caf/infrastructure start\" \"yarn workspace @caf/infrastructure-vue start\" \"yarn workspace @caf/presentation-vue dev\"",
    "react:dev": "concurrently --kill-others \"yarn workspace @caf/core start\" \"yarn workspace @caf/infrastructure start\" \"yarn workspace @caf/infrastructure-react start\" \"yarn workspace @caf/presentation-react dev\"",
    "angular:dev": "concurrently --kill-others \"yarn workspace @caf/core start\" \"yarn workspace @caf/infrastructure start\" \"yarn workspace @caf/infrastructure-angular start\" \"yarn workspace @caf/presentation-angular start\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-loader": "8.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  }
}
