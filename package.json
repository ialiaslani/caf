{
  "name": "caf",
  "version": "1.0.0",
  "description": "clean architecture frontend",
  "repository": "https://github.com/ialiaslani/caf.git",
  "author": "ali aslani <aliaslani.mm@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/**",
    "examples/**"
  ],
  "scripts": {
    "test": "yarn core:test && yarn workspace @c.a.f/devtools test && yarn workspace @c.a.f/workflow test && yarn workspace @c.a.f/infrastructure-react test",
    "core:build": "yarn workspace @c.a.f/core build",
    "core:test": "yarn workspace @c.a.f/core test",
    "core:serve": "yarn workspace @c.a.f/core start",
    "infrastructure:axios:build": "yarn workspace @c.a.f/infrastructure-axios build",
    "infrastructure:axios:serve": "yarn workspace @c.a.f/infrastructure-axios start",
    "validation:build": "yarn workspace @c.a.f/validation build",
    "validation:serve": "yarn workspace @c.a.f/validation start",
    "infrastructure:react:serve": "yarn workspace @c.a.f/infrastructure-react start",
    "infrastructure:vue:serve": "yarn workspace @c.a.f/infrastructure-vue start",
    "infrastructure:angular:serve": "yarn workspace @c.a.f/infrastructure-angular start",
    "example-domain:build": "yarn workspace @c.a.f/example-domain build",
    "example-domain:serve": "yarn workspace @c.a.f/example-domain start",
    "example-infrastructure:build": "yarn workspace @c.a.f/example-infrastructure build",
    "example-infrastructure:serve": "yarn workspace @c.a.f/example-infrastructure start",
    "example:vue:build": "yarn workspace @c.a.f/example-vue build",
    "example:vue:serve": "yarn workspace @c.a.f/example-vue dev",
    "example:react:build": "yarn workspace @c.a.f/example-react build",
    "example:react:serve": "yarn workspace @c.a.f/example-react dev",
    "example:angular:build": "yarn workspace @c.a.f/example-angular build",
    "example:angular:serve": "yarn workspace @c.a.f/example-angular start",
    "example:vue:dev": "concurrently --kill-others \"yarn workspace @c.a.f/core start\" \"yarn workspace @c.a.f/example-infrastructure start\" \"yarn workspace @c.a.f/infrastructure-vue start\" \"yarn workspace @c.a.f/example-vue dev\"",
    "example:react:dev": "concurrently --kill-others \"yarn workspace @c.a.f/core start\" \"yarn workspace @c.a.f/example-infrastructure start\" \"yarn workspace @c.a.f/infrastructure-react start\" \"yarn workspace @c.a.f/example-react dev\"",
    "example:angular:dev": "concurrently --kill-others \"yarn workspace @c.a.f/core start\" \"yarn workspace @c.a.f/example-infrastructure start\" \"yarn workspace @c.a.f/infrastructure-angular start\" \"yarn workspace @c.a.f/example-angular start\"",
    "cli:build": "yarn workspace @c.a.f/cli build",
    "cli:publish": "cd packages/cli && npm run build && npm publish --access public",
    "cli:test": "cd packages/cli && npm run build && node dist/bin/caf-init.js"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-loader": "8.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2",
    "vitest": "^2.1.0"
  }
}
