{
  "name": "caf",
  "version": "1.0.0",
  "description": "clean architecture frontend",
  "repository": "https://github.com/ialiaslani/caf.git",
  "author": "ali aslani <aliaslani.mm@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/**",
    "examples/**",
    "website"
  ],
  "resolutions": {
    "@angular/core": "^21.1.0",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0"
  },
  "overrides": {
    "@angular/core": "^21.1.0",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0"
  },
  "scripts": {
    "test": "yarn core:test && yarn workspace @c-a-f/devtools test && yarn workspace @c-a-f/workflow test && yarn workspace @c-a-f/infrastructure-react test && yarn workspace @c-a-f/infrastructure-vue test && yarn workspace @c-a-f/infrastructure-angular test && yarn workspace @c-a-f/cli test && yarn workspace @c-a-f/validation test && yarn workspace @c-a-f/permission test && yarn workspace @c-a-f/i18n test",
    "core:build": "yarn workspace @c-a-f/core build",
    "core:test": "yarn workspace @c-a-f/core test",
    "core:serve": "yarn workspace @c-a-f/core start",
    "validation:build": "yarn workspace @c-a-f/validation build",
    "validation:serve": "yarn workspace @c-a-f/validation start",
    "infrastructure:react:serve": "yarn workspace @c-a-f/infrastructure-react start",
    "infrastructure:vue:serve": "yarn workspace @c-a-f/infrastructure-vue start",
    "infrastructure:angular:serve": "yarn workspace @c-a-f/infrastructure-angular start",
    "infrastructure:angular:test": "yarn workspace @c-a-f/infrastructure-angular test",
    "permission:test": "yarn workspace @c-a-f/permission test",
    "i18n:test": "yarn workspace @c-a-f/i18n test",
    "example:vue:build": "yarn workspace @c-a-f/example-vue build",
    "example:vue:serve": "yarn workspace @c-a-f/example-vue dev",
    "example:react:build": "yarn workspace @c-a-f/example-react build",
    "example:react:serve": "yarn workspace @c-a-f/example-react dev",
    "example:angular:build": "yarn workspace @c-a-f/example-angular build",
    "example:angular:serve": "yarn workspace @c-a-f/example-angular start",
    "example:vue:dev": "concurrently --kill-others \"yarn workspace @c-a-f/core start\" \"yarn workspace @c-a-f/infrastructure-vue start\" \"yarn workspace @c-a-f/example-vue dev\"",
    "example:vue-graphql:dev": "yarn workspace example-vue-graphql dev",
    "example:react:dev": "concurrently --kill-others \"yarn workspace @c-a-f/core start\" \"yarn workspace @c-a-f/infrastructure-react start\" \"yarn workspace @c-a-f/example-react dev\"",
    "example:angular:dev": "concurrently --kill-others \"yarn workspace @c-a-f/core start\" \"yarn workspace @c-a-f/infrastructure-angular start\" \"yarn workspace @c-a-f/example-angular start\"",
    "example:angular-websocket:build": "yarn workspace example-angular-websocket build",
    "example:angular-websocket:serve": "yarn workspace example-angular-websocket start",
    "cli:build": "yarn workspace @c-a-f/cli build",
    "cli:test": "yarn workspace @c-a-f/cli test",
    "cli:publish": "cd packages/cli && npm run build && npm publish --access public",
    "docs:serve": "yarn workspace @c-a-f/website start",
    "docs:build": "yarn workspace @c-a-f/website build",
    "docs:clear": "yarn workspace @c-a-f/website clear"
  },
  "devDependencies": {
    "@angular/core": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@testing-library/dom": "^10.4.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-loader": "8.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2",
    "vitest": "^2.1.0"
  }
}
