{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.build",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@c.a.f/core": ["../../packages/core"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    ".build",
    "node_modules",
    "**/*.spec.ts"
  ]
}
