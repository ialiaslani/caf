{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.build",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@caf/example-domain": ["../example-domain"],
      "@caf/core": ["../../packages/core"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".build",
    "**/*.spec.ts"
  ]
}
