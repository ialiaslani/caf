{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.build",
    "rootDir": "../angular",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": ["../angular/**/*"],
  "exclude": ["node_modules", ".build", "**/*.spec.ts"]
}
