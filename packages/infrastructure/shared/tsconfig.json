{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.build",
    "rootDir": "../shared",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}