{
  "name": "@c.a.f/i18n",
  "type": "module",
  "version": "1.0.0",
  "description": "Framework-agnostic internationalization interfaces and adapters for CAF. Works with i18next, vue-i18n, ngx-translate, react-intl, next-intl, or any i18n library.",
  "keywords": ["clean-architecture-frontend", "clean-architecture", "caf", "i18n", "internationalization", "translation", "i18next", "vue-i18n", "ngx-translate", "react-intl", "next-intl"],
  "author": "ali aslani <aliaslani.mm@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/ialiaslani/caf.git",
  "main": "./.build/index.js",
  "module": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "exports": {
    ".": {
      "types": "./.build/index.d.ts",
      "import": "./.build/index.js",
      "node": "./.build/index.js",
      "default": "./.build/index.js"
    },
    "./i18next": {
      "types": "./.build/src/adapters/i18next.d.ts",
      "import": "./.build/src/adapters/i18next.js",
      "node": "./.build/src/adapters/i18next.js",
      "default": "./.build/src/adapters/i18next.js"
    },
    "./vue-i18n": {
      "types": "./.build/src/adapters/vue-i18n.d.ts",
      "import": "./.build/src/adapters/vue-i18n.js",
      "node": "./.build/src/adapters/vue-i18n.js",
      "default": "./.build/src/adapters/vue-i18n.js"
    },
    "./ngx-translate": {
      "types": "./.build/src/adapters/ngx-translate.d.ts",
      "import": "./.build/src/adapters/ngx-translate.js",
      "node": "./.build/src/adapters/ngx-translate.js",
      "default": "./.build/src/adapters/ngx-translate.js"
    },
    "./react-intl": {
      "types": "./.build/src/adapters/react-intl.d.ts",
      "import": "./.build/src/adapters/react-intl.js",
      "node": "./.build/src/adapters/react-intl.js",
      "default": "./.build/src/adapters/react-intl.js"
    },
    "./next-intl": {
      "types": "./.build/src/adapters/next-intl.d.ts",
      "import": "./.build/src/adapters/next-intl.js",
      "node": "./.build/src/adapters/next-intl.js",
      "default": "./.build/src/adapters/next-intl.js"
    },
    "./intl-api": {
      "types": "./.build/src/adapters/intl-api.d.ts",
      "import": "./.build/src/adapters/intl-api.js",
      "node": "./.build/src/adapters/intl-api.js",
      "default": "./.build/src/adapters/intl-api.js"
    }
  },
  "files": [".build"],
  "scripts": {
    "build": "tsc --build",
    "start": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "node_modules/.bin/vitest run",
    "test:watch": "node_modules/.bin/vitest"
  },
  "dependencies": {
    "@c.a.f/core": "1.0.3"
  },
  "peerDependencies": {
    "i18next": "*",
    "vue-i18n": "*",
    "@ngx-translate/core": "*",
    "react-intl": "*",
    "next-intl": "*"
  },
  "peerDependenciesMeta": {
    "i18next": {
      "optional": true
    },
    "vue-i18n": {
      "optional": true
    },
    "@ngx-translate/core": {
      "optional": true
    },
    "react-intl": {
      "optional": true
    },
    "next-intl": {
      "optional": true
    }
  },
  "devDependencies": {
    "vitest": "^2.1.0"
  }
}
