{
  "name": "@c-a-f/permission",
  "type": "module",
  "version": "1.0.1",
  "description": "Clean Architecture Frontend (CAF) â€” framework-agnostic permission interfaces and adapters. Role-based, policy-based, CASL, resource-based, hierarchical, time-based.",
  "keywords": [
    "clean-architecture-frontend",
    "clean-architecture",
    "clean architecture frontend",
    "caf",
    "permission",
    "authorization",
    "access-control",
    "rbac",
    "casl",
    "policy"
  ],
  "author": "ali aslani <aliaslani.mm@gmail.com>",
  "license": "MIT",
  "homepage": "https://docs-caf.vercel.app/docs/packages/permission",
  "repository": "https://github.com/ialiaslani/caf.git",
  "main": "./.build/index.js",
  "module": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "exports": {
    ".": {
      "types": "./.build/index.d.ts",
      "import": "./.build/index.js",
      "node": "./.build/index.js",
      "default": "./.build/index.js"
    },
    "./role-based": {
      "types": "./.build/src/adapters/RoleBasedPermissionChecker.d.ts",
      "import": "./.build/src/adapters/RoleBasedPermissionChecker.js",
      "node": "./.build/src/adapters/RoleBasedPermissionChecker.js",
      "default": "./.build/src/adapters/RoleBasedPermissionChecker.js"
    },
    "./policy-based": {
      "types": "./.build/src/adapters/PolicyBasedPermissionChecker.d.ts",
      "import": "./.build/src/adapters/PolicyBasedPermissionChecker.js",
      "node": "./.build/src/adapters/PolicyBasedPermissionChecker.js",
      "default": "./.build/src/adapters/PolicyBasedPermissionChecker.js"
    },
    "./simple": {
      "types": "./.build/src/adapters/SimplePermissionChecker.d.ts",
      "import": "./.build/src/adapters/SimplePermissionChecker.js",
      "node": "./.build/src/adapters/SimplePermissionChecker.js",
      "default": "./.build/src/adapters/SimplePermissionChecker.js"
    },
    "./casl": {
      "types": "./.build/src/adapters/CaslAdapter.d.ts",
      "import": "./.build/src/adapters/CaslAdapter.js",
      "node": "./.build/src/adapters/CaslAdapter.js",
      "default": "./.build/src/adapters/CaslAdapter.js"
    },
    "./resource-based": {
      "types": "./.build/src/adapters/ResourceBasedPermissionChecker.d.ts",
      "import": "./.build/src/adapters/ResourceBasedPermissionChecker.js",
      "node": "./.build/src/adapters/ResourceBasedPermissionChecker.js",
      "default": "./.build/src/adapters/ResourceBasedPermissionChecker.js"
    },
    "./hierarchical": {
      "types": "./.build/src/adapters/HierarchicalPermissionChecker.d.ts",
      "import": "./.build/src/adapters/HierarchicalPermissionChecker.js",
      "node": "./.build/src/adapters/HierarchicalPermissionChecker.js",
      "default": "./.build/src/adapters/HierarchicalPermissionChecker.js"
    },
    "./time-based": {
      "types": "./.build/src/adapters/TimeBasedPermissionChecker.d.ts",
      "import": "./.build/src/adapters/TimeBasedPermissionChecker.js",
      "node": "./.build/src/adapters/TimeBasedPermissionChecker.js",
      "default": "./.build/src/adapters/TimeBasedPermissionChecker.js"
    }
  },
  "files": [
    ".build"
  ],
  "scripts": {
    "build": "tsc --build",
    "start": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@c-a-f/core": "1.0.3"
  },
  "peerDependencies": {
    "@casl/ability": "*"
  },
  "peerDependenciesMeta": {
    "@casl/ability": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.0",
    "vitest": "^2.1.0"
  }
}
