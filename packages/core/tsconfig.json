{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./.build",
    "rootDir": "../core",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../core/**/*"
  ],
  "exclude": [
    ".build",
    "node_modules",
    "**/*.spec.ts"
  ],
}