{
  "name": "@c-a-f/devtools",
  "type": "module",
  "version": "1.0.3",
  "description": "Development tools and debugging utilities for CAF applications. Provides state tracking, time-travel debugging, logging, and inspection utilities for Ploc, Pulse, UseCase, ApiRequest, and Workflow.",
  "keywords": [
    "clean-architecture-frontend",
    "clean-architecture",
    "caf",
    "devtools",
    "debugging",
    "development",
    "state-inspection",
    "time-travel"
  ],
  "author": "ali aslani <aliaslani.mm@gmail.com>",
  "license": "MIT",
  "homepage": "https://docs-caf.vercel.app/docs/packages/devtools",
  "repository": "https://github.com/ialiaslani/caf.git",
  "main": "./.build/index.js",
  "module": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "exports": {
    ".": {
      "types": "./.build/index.d.ts",
      "import": "./.build/index.js",
      "node": "./.build/index.js",
      "default": "./.build/index.js"
    },
    "./core": {
      "types": "./.build/src/core/index.d.ts",
      "import": "./.build/src/core/index.js",
      "node": "./.build/src/core/index.js",
      "default": "./.build/src/core/index.js"
    },
    "./workflow": {
      "types": "./.build/src/workflow/index.d.ts",
      "import": "./.build/src/workflow/index.js",
      "node": "./.build/src/workflow/index.js",
      "default": "./.build/src/workflow/index.js"
    },
    "./logger": {
      "types": "./.build/src/logger/index.d.ts",
      "import": "./.build/src/logger/index.js",
      "node": "./.build/src/logger/index.js",
      "default": "./.build/src/logger/index.js"
    },
    "./inspector": {
      "types": "./.build/src/inspector/index.d.ts",
      "import": "./.build/src/inspector/index.js",
      "node": "./.build/src/inspector/index.js",
      "default": "./.build/src/inspector/index.js"
    }
  },
  "files": [
    ".build"
  ],
  "scripts": {
    "build": "tsc --build",
    "start": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "node_modules/.bin/vitest run",
    "test:watch": "node_modules/.bin/vitest"
  },
  "dependencies": {
    "@c-a-f/core": "1.0.3",
    "@c-a-f/workflow": "1.0.1"
  },
  "devDependencies": {
    "vitest": "^2.1.0"
  }
}
