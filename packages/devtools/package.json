{
  "name": "@c.a.f/devtools",
  "type": "module",
  "version": "1.0.0",
  "description": "Development tools and debugging utilities for CAF applications. Provides state tracking, time-travel debugging, logging, and inspection utilities for Ploc, Pulse, UseCase, and Workflow.",
  "keywords": ["caf", "devtools", "debugging", "development", "state-inspection", "time-travel", "clean-architecture"],
  "author": "ali aslani <aliaslani.mm@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/ialiaslani/caf.git",
  "main": "./.build/index.js",
  "module": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "exports": {
    ".": {
      "types": "./.build/index.d.ts",
      "import": "./.build/index.js",
      "default": "./.build/index.js"
    },
    "./core": {
      "types": "./.build/core/index.d.ts",
      "import": "./.build/core/index.js",
      "default": "./.build/core/index.js"
    },
    "./workflow": {
      "types": "./.build/workflow/index.d.ts",
      "import": "./.build/workflow/index.js",
      "default": "./.build/workflow/index.js"
    },
    "./logger": {
      "types": "./.build/logger/index.d.ts",
      "import": "./.build/logger/index.js",
      "default": "./.build/logger/index.js"
    },
    "./inspector": {
      "types": "./.build/inspector/index.d.ts",
      "import": "./.build/inspector/index.js",
      "default": "./.build/inspector/index.js"
    }
  },
  "files": [".build"],
  "scripts": {
    "build": "tsc --build",
    "start": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@c.a.f/core": "1.0.0",
    "@c.a.f/workflow": "1.0.0"
  }
}
