{
  "name": "@c.a.f/validation",
  "type": "module",
  "version": "1.0.0",
  "description": "Schema-agnostic validation interfaces and runner for CAF. Works with Zod, Yup, Joi, class-validator, or any validation library.",
  "keywords": ["caf", "validation", "schema", "zod", "yup", "joi", "class-validator", "clean-architecture"],
  "author": "ali aslani <aliaslani.mm@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/ialiaslani/caf.git",
  "main": "./.build/index.js",
  "module": "./.build/index.js",
  "types": "./.build/index.d.ts",
  "exports": {
    ".": {
      "types": "./.build/index.d.ts",
      "import": "./.build/index.js",
      "default": "./.build/index.js"
    },
    "./zod": {
      "types": "./.build/adapters/zod.d.ts",
      "import": "./.build/adapters/zod.js",
      "default": "./.build/adapters/zod.js"
    },
    "./yup": {
      "types": "./.build/adapters/yup.d.ts",
      "import": "./.build/adapters/yup.js",
      "default": "./.build/adapters/yup.js"
    },
    "./joi": {
      "types": "./.build/adapters/JoiAdapter.d.ts",
      "import": "./.build/adapters/JoiAdapter.js",
      "default": "./.build/adapters/JoiAdapter.js"
    },
    "./class-validator": {
      "types": "./.build/adapters/ClassValidatorAdapter.d.ts",
      "import": "./.build/adapters/ClassValidatorAdapter.js",
      "default": "./.build/adapters/ClassValidatorAdapter.js"
    }
  },
  "files": [".build"],
  "scripts": {
    "build": "tsc --build",
    "start": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@c.a.f/core": "1.0.0"
  },
  "peerDependencies": {
    "zod": "*",
    "yup": "*",
    "joi": "*",
    "class-validator": "*"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "yup": {
      "optional": true
    },
    "joi": {
      "optional": true
    },
    "class-validator": {
      "optional": true
    }
  }
}
